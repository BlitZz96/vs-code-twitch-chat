{
	"name": "twitch-chat",
	"displayName": "twitch-chat",
	"description": "Twitch chat popout",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:twitch.open"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "twitch.open",
				"title": "Twitch: Open chat"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Twitch-chat settings",
			"properties": {
				"twitch.oauth": {
					"type": "string",
					"default": "",
					"description": "DONT SHOW THIS IN STREAM!!!!, Your twitch token, Generate a token here: http://www.twitchapps.com/tmi"
				},
				"twitch.username": {
					"type": "string",
					"default": "",
					"description": "Your Twitch username."
				},
				"twitch.channel": {
					"type": "string",
					"default": "",
					"description": "The channel name. For Twitch, use [your channel/user name] without a hashtag."
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"eslint": "^4.11.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"twitch-bot": "^1.2.5"
	}
}
